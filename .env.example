APP_NAME=Ministrify
APP_ENV=local
APP_KEY=
# SECURITY: Set to false in production!
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
# SECURITY: Set to 'warning' or 'error' in production!
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ministrify
DB_USERNAME=ministrify
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@ministrify.app"
MAIL_FROM_NAME="${APP_NAME}"

TELEGRAM_BOT_TOKEN=

# Production Security Checklist:
# 1. APP_DEBUG=false
# 2. APP_ENV=production
# 3. LOG_LEVEL=warning
# 4. Use strong DB_PASSWORD
# 5. Enable HTTPS (APP_URL should be https://)
# 6. Configure proper MAIL settings
# 7. Set SESSION_SECURE_COOKIE=true for HTTPS
