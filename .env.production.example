# ========================================
# Ministrify.app Production Configuration
# ========================================

APP_NAME=Ministrify
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://ministrify.app

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database (Docker internal network)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ministrify
DB_USERNAME=ministrify
# CHANGE THIS! Use: openssl rand -base64 32
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Cache & Queue (Docker internal network)
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration (configure for your provider)
# Example for Gmail SMTP:
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ministrify.app
MAIL_FROM_NAME="${APP_NAME}"

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=

# ========================================
# SECURITY NOTES:
# ========================================
# 1. Generate APP_KEY: docker compose exec app php artisan key:generate
# 2. Use strong DB_PASSWORD (32+ characters)
# 3. Never commit this file to git!
# 4. Backup this file securely
# ========================================
