# ========================================
# Ministrify Production Environment
# ========================================
# Copy this file to your server as .env in /var/www/ministrify/

# Application
APP_KEY=base64:GENERATE_NEW_KEY_WITH_openssl_rand_-base64_32
APP_URL=https://ministrify.app

# Database - CHANGE THESE!
DB_DATABASE=ministrify
DB_USERNAME=ministrify
DB_PASSWORD=YOUR_STRONG_PASSWORD_HERE

# Mail Configuration (Resend)
MAIL_MAILER=smtp
MAIL_HOST=smtp.resend.com
MAIL_PORT=465
MAIL_USERNAME=resend
MAIL_PASSWORD=re_YOUR_RESEND_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ministrify.app
MAIL_FROM_NAME="Ministrify"

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
